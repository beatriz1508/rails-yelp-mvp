<h1 class="text-center mb-5">Amazing Restaurants</h1>
<%= link_to "Add new restaurant", new_restaurant_path, class: 'btn btn-lg btn-success mb-3' %>
<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-4">
      <div class="card mb-2">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">Adress: <%= restaurant.address %></h6>
          <p class="card-text"><%= restaurant.phone_number %></p>
          <%= link_to "View details", restaurant_path(restaurant), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
